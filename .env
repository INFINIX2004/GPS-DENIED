# AeroVision Dashboard - Environment Configuration
# Copy this file to .env and update with your actual values

# Application Environment
NODE_ENV=development
PORT=5173

# AeroVision Backend Configuration
REACT_APP_AEROVISION_WS_URL=ws://localhost:8080/aerovision/stream
REACT_APP_AEROVISION_API_URL=http://localhost:8080/aerovision/data

# Production URLs (uncomment for production)
# REACT_APP_AEROVISION_WS_URL=wss://your-domain.com/aerovision/stream
# REACT_APP_AEROVISION_API_URL=https://your-domain.com/aerovision/data

# Development Settings
REACT_APP_USE_MOCK_DATA=false
REACT_APP_MOCK_UPDATE_INTERVAL=200
REACT_APP_DEBUG_LOGS=false
REACT_APP_UPDATE_FREQUENCY=5

# Production Settings (set these for production deployment)
# REACT_APP_USE_MOCK_DATA=false
# REACT_APP_DEBUG_LOGS=false

# Security Configuration
# REACT_APP_API_KEY=your-api-key-here
# REACT_APP_AUTH_TOKEN=your-auth-token-here

# Feature Flags
REACT_APP_ENABLE_MANUAL_REFRESH=true
REACT_APP_SHOW_CONNECTION_STATUS=true
REACT_APP_AUTO_SELECT_HIGHEST_THREAT=true

# Performance Settings
REACT_APP_MAX_RECONNECT_ATTEMPTS=5
REACT_APP_RECONNECT_DELAY=1000
REACT_APP_REQUEST_TIMEOUT=5000

# Analytics (optional)
# REACT_APP_ANALYTICS_ID=your-analytics-id
# REACT_APP_SENTRY_DSN=your-sentry-dsn

# Database Configuration (for backend)
DATABASE_URL=postgresql://user:password@localhost:5432/aerovision
REDIS_URL=redis://localhost:6379

# Docker Configuration
COMPOSE_PROJECT_NAME=aerovision
DOCKER_REGISTRY=your-registry.com

# SSL Configuration (for production)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem